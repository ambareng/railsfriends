<div class="jumbotron">
  <h1 class="display-4"><%= @friend.name %></h1>
  <p class="lead"><%= @friend.email %></p>
  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
  <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
</div>
